
extends ../../layouts/default.pug
block main
    h1 #{pageTitle}

    .card.mb-3  
        .card-header Bộ lọc và Tìm kiếm 
        .card-body 
            each item in filterStatus
                
                button(
                class =`btn btn-sm ml-1 btn-outline-success ${item.class}`
                button-status = item.status
                ) #{item.name}

            //-     button(
            //-         class="btn btn-sm ml-1 btn-outline-success "
            //-             button-status = "active"
            //- ) Hoạt Động 
            //-     button(
            //-         class="btn btn-sm ml-1 btn-outline-success "
            //-             button-status = "inactive"
            //- ) Dừng hoạt động


    table.table.table-hover.table-sm
        thead 
            tr 
                th STT 
                th Hình ảnh 
                th Tiêu đề
                th Giá
                th Trạng thái 
                th Hành động 

        tbody 
            each item,index in listProducts
                tr 
                    td #{index +1 }
                    td 
                        img(
                            src=item.thumbnail
                            alt = "Sản phẩm 1"
                            width = "100px"  
                            )
                    td #{item.title}
                    td #{item.price}$
                    td  
                        if(item.status === "active")
                            a(href = "#" class="badge badge-success") #{item.status}
                        else 
                            a(href = "#" class="badge badge-danger") #{item.status}
                    td 
                        button(class="btn btn-warning btn-sm") Sửa
                        button(class="btn btn-danger btn-sm ml-1") Xóa




